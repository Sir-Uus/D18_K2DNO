<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../dist/css/bootstrap.min.css" />
    <title>Transaksi</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
      <div class="container-fluid">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="/">Dashboard</a>
        <!-- Toggler/collapsibe Button -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/produk/">Produk</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/transaksi/">Transaksi</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/karyawan/">Karyawan</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/investor/">Investor</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user">User</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="card mt-3 mb-3">
        <div class="card shadow-mb4">
          <div class="card-header bg-warning text-light"><h4>Transaksi</h4></div>
          <div class="card-body">
            <form action="/transaksi/insert" method="post" id="form-transaksi">
              <div class="row mb-3">
                <!-- <div class="col-md-3">
                  <label for="">ID Transaksi</label>
                </div> -->
                <div class="col-md-8">
                  <input type="hidden" name="id_transaksi" id="id_transaksi" class="form-control" />
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-3">
                  <label for="produk">Nama Produk</label>
                </div>
                <div class="col-md-8">
                  <select name="id_produk" id="produk" class="form-control" >
                    <% produk.forEach(data => { %>
                      <option value="<%= data.id_produk %>"><%= data.namaproduk %></option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-3">
                  <label for="">Quantity</label>
                </div>
                <div class="col-md-8">
                  <input type="number" name="quantity" id="quantity" class="form-control" />
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-3 mb-3">
                  <label for="">Tanggal Transaksi</label>
                </div>
                <div class="col-md-8">
                  <input type="date" name="tanggal" id="tanggal_transaksi" class="form-control" />
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-3">
                  <label for="karyawan">Nama Karyawan</label>
                </div>
                <div class="col-md-8">
                  <select name="id_karyawan" id="karyawan" class="form-control" >
                    <% karyawan.forEach(data => { %>
                      <option value="<%= data.id %>"><%= data.nama_karyawan %></option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <input type="submit" name="submit" id="btn-add" class="btn btn-primary" />
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <table class="table table-striped table-hover">
        <thead class="text-center">
          <th>No</th>
          <th>Nama Produk</th>
          <th>Quantity</th>
          <th>Tanggal Transaksi</th>
          <th>Harga Total</th>
          <th>Nama Karyawan</th>
        </thead>
        <tbody class="text-center">
          <% transaksi.forEach((transaksi,index) => { %>
            <tr>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= transaksi.id_produk %></td>
                <td><%= transaksi.quantity %></td>
                <td><%= transaksi.tanggal %></td>
                <td><%= transaksi.hargatotal %></td>
                <td><%= transaksi.id_karyawan %></td>
              </tr>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
