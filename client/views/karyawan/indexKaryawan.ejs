<%- include('../navbar/navbar') %>

<div class="container">
  <div class="card mt-3 mb-3">
    <div class="card shadow-mb4">
      <div class="card-header bg-warning text-light"><h4>Karyawan</h4></div>
      <div class="card-body">
        <form action="/karyawan/insert" method="post">
          <div class="row mb-3">
            <div class="col-md-8">
              <input
                type="hidden"
                name="id_karyawan"
                id="id_karyawan"
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <label for="">Nama Karyawan</label>
            </div>
            <div class="col-md-8">
              <input
                type="text"
                name="nama_karyawan"
                id="nama_karyawan"
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <label for="">Tanggal Lahir</label>
            </div>
            <div class="col-md-8">
              <input
                type="date"
                name="tgl_lahir"
                id="tgl_lahir"
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3 mb-3">
              <label for="">Jenis Kelamin</label>
            </div>
            <div class="col-md-8">
              <select name="jenis_kelamin" id="role" class="form-select">
                <option value=""></option>
                s
                <option value="Laki-laki">Laki-laki</option>
                <option value="Perempuan">Perempuan</option>
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3 mb-3">
              <label for="">Alamat</label>
            </div>
            <div class="col-md-8">
              <input
                type="text"
                name="alamat"
                id="alamat"
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3 mb-3">
              <label for="">Kontak</label>
            </div>
            <div class="col-md-8">
              <input
                type="number"
                name="noTlp"
                id="noTlp"
                class="form-control"
              />
            </div>
          </div>

          <input
            type="submit"
            name="submit"
            id="btn-add"
            class="btn btn-primary"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="card shadow-mb4">
      <table class="table table-striped table-hover">
        <thead class="text-center">
          <th>No</th>
          <th>Nama karyawan</th>
          <th>Tanggal Lahir</th>
          <th>Gender</th>
          <th>Alamat</th>
          <th>Kontak</th>
          <th>N/A</th>
        </thead>
        <tbody class="text-center">
          <% karyawans.forEach((karyawan,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= karyawan.nama_karyawan %></td>
            <td><%= new Date(karyawan.tgl_lahir).toLocaleDateString() %></td>
            <td><%= karyawan.jenis_kelamin %></td>
            <td><%= karyawan.alamat %></td>
            <td><%= karyawan.noTlp %></td>
            <td>
              <a
                href="/karyawan/edit/<%= karyawan.id %>"
                class="btn btn-primary btn-sm"
                >Edit</a
              >
              <form
                action="/karyawan/delete/<%= karyawan.id %>"
                method="post"
                style="display: inline"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
