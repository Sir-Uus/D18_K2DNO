<%- include('../navbar/navbar') %>

<div class="container">
  <div class="card mt-3 mb-3">
    <div class="card shadow-mb4">
      <div class="card-header bg-warning text-light"><h4>Investor</h4></div>
      <div class="card-body">
        <form action="/investor/insert" method="post" id="form-investor">
          <div class="row mb-3">
            <div class="col-md-3">
              <!-- <label for="">ID Investor</label> -->
            </div>
            <div class="col-md-8">
              <input type="hidden" name="id" id="id" class="form-control" />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <label for="">Nama Investor</label>
            </div>
            <div class="col-md-8">
              <input type="text" name="nama" id="nama" class="form-control" />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <label for="">Jumlah Investasi</label>
            </div>
            <div class="col-md-8">
              <input
                type="text "
                name="jumlah"
                id="jumlah"
                class="form-control"
              />
            </div>
          </div>
          <input
            type="submit"
            name="submit"
            id="btn-add"
            class="btn btn-primary"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <table class="table table-striped table-hover">
    <thead class="text-center">
      <th>No</th>
      <th>Nama Investor</th>
      <th>Jumlah Invetasi</th>
      <th>N/A</th>
    </thead>
    <tbody class="text-center">
      <% investors.forEach((investor,index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= investor.nama %></td>
        <td><%= investor.jumlah%></td>
        <td>
          <a
            href="/investor/edit/<%= investor.id %>"
            class="btn btn-primary btn-sm"
            >Edit</a
          >
          <form
            action="/investor/delete/<%= investor.id %>"
            method="post"
            style="display: inline"
          >
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
